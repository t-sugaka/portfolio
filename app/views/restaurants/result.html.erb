<div class="container">
    <% if @rests %>
        <div class="card-body">
                <% @rests.each do |rest| %>
                    <div class="row">
                        <div class="card my-3" style="max-width: 1000px">
                            <%= image_tag(rest["image_url"]["shop_image1"]) %>
                            <p>
                            <%= rest["name"] %>
                            </p>
                            <p>
                            <%= rest["address"] %>
                            </p>
                            <%= hidden_field_tag :restaurant_id, rest["id"] %>
                            <% if @checking === nil %>
                            <%- @checking %>
                                <%= link_to bookmarks_path(restaurant_id: rest["id"]), method: :get do %>
                                    <div class="heart"></div>
                                <% end %>
                            <% else %>
                                <%= link_to bookmarks_path(restaurant_id: rest["id"]), method: :delete do %>
                                    <div class="favolite-heart"></div>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                <% end %>
        </div>
    <% end %>
</div>